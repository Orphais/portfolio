{% extends 'base.html.twig' %}

{% block title %}Portfolio - Connexion{% endblock %}

{% block nav_links %}
	<li class="nav-item">
		<a class="nav-link" href="{{ path('inscription') }}">Inscription</a>
	</li>
{% endblock %}

{% block body %}
	<style>
		/* Votre CSS existant, intégré ici */
		* {
			font-family: -apple-system, BlinkMacSystemFont, "San Francisco", Helvetica, Arial, sans-serif;
			font-weight: 300;
			margin: 0;
		}
		$primary: rgb(182, 157, 230);
		body {
			background: #f3f2f2;
		}
		.container {
			width: 400px;
			margin: 50px auto;
			padding: 40px 30px;
			background: #fefefe;
			border-radius: 10px;
			box-shadow: 0px 2px 6px -1px rgba(0, 0, 0, 0.12);
		}
		h1 {
			margin-bottom: 20px;
			font-size: 24px;
			font-weight: 600;
			color: #000;
			opacity: 0.85;
		}
		.floating-label {
			position: relative;
			margin-bottom: 20px;
			width: 100%;
		}
		.floating-label input {
			font-size: 16px;
			padding: 20px 0px;
			margin-left: 44px;
			height: 56px;
			border: none;
			border-bottom: solid 1px rgba(0, 0, 0, .1);
			background: #fff;
			width: calc(100% - 44px);
			box-sizing: border-box;
			color: #000;
			font-weight: 400;
			transition: all .3s linear;
			-webkit-appearance: none;
		}
		.floating-label input:focus {
			border-bottom: solid 1px $primary;
			outline: 0;
			box-shadow: 0 2px 6px -8px rgba($primary, .45);
		}
		.floating-label input:not(:placeholder-shown) {
			padding: 28px 0px 12px 0px;
		}
		.floating-label label {
			position: absolute;
			top: calc(50% - 7px);
			left: 0;
			opacity: 0;
			transition: all .3s ease;
			padding-left: 44px;
			margin-top: -10px;
		}
		.floating-label input:not(:placeholder-shown) + label {
			transform: translateY(-10px);
			opacity: 0.7;
		}
		.floating-label .icon {
			position: absolute;
			top: 0;
			left: 0;
			height: 56px;
			width: 44px;
			display: flex;
		}
		.floating-label .icon svg {
			height: 30px;
			width: 30px;
			margin: auto;
			opacity: 0.15;
			transition: all .3s ease;
		}
		.floating-label input:valid:not(:placeholder-shown) + label + .icon svg {
			opacity: 1;
		}
		.floating-label input:valid:not(:placeholder-shown) + label + .icon svg path {
			fill: $primary;
		}
		button {
			margin-top: 20px;
			width: 100%;
			padding: 15px;
			border: none;
			background-color: #1A1A1A;
			color: #fff;
			font-size: 14px;
			font-weight: 500;
			border-radius: 24px;
			cursor: pointer;
			transition: all 0.3s ease;
		}
		button:hover {
			transform: translateY(-3px);
			box-shadow: 0 2px 6px -1px rgba($primary, 0.65);
		}
	</style>

	<div class="container">
		<h1>Formulaire de connexion</h1>

		{% for message in app.flashes('success') %}
			<div class="alert alert-success mt-4">
				{{ message }}
			</div>
		{% endfor %}

		{% if error %}
			<div class="alert alert-danger mt-4">
				{{ error.messageKey|trans(error.messageData, 'security') }}
			</div>
		{% endif %}

		<form action="{{ path('security.login') }}" method="post">
			<div class="floating-label">
				<input 
					type="email" 
					id="username" 
					name="_username" 
					placeholder="Adresse email" 
					required>
				<label for="username">Adresse email</label>
<div class="icon">
