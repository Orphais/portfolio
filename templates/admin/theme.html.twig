{% extends "@EasyAdmin/page/content.html.twig" %}

{% block content %}
    <!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Changer le Thème</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
    <div class="container text-center my-5">
        <h1>Choisissez un Thème</h1>
        <div class="row row-cols-1 row-cols-md-3 g-4 mt-4">
            <div class="col">
                <button class="btn btn-primary change-theme" data-theme="https://cdn.jsdelivr.net/npm/bootswatch@5.3.2/dist/lux/bootstrap.min.css">Lux</button>
            </div>
            <div class="col">
                <button class="btn btn-secondary change-theme" data-theme="https://cdn.jsdelivr.net/npm/bootswatch@5.3.2/dist/cerulean/bootstrap.min.css">Cerulean</button>
            </div>
            <div class="col">
                <button class="btn btn-dark change-theme" data-theme="https://cdn.jsdelivr.net/npm/bootswatch@5.3.2/dist/cyborg/bootstrap.min.css">Cyborg</button>
            </div>
        </div>
        <p class="mt-4">
            <a href="/" class="btn btn-success">Retour à l'Accueil</a>
        </p>
    </div>

    <!-- Script pour sauvegarder le choix du thème -->
    <script>
        document.querySelectorAll('.change-theme').forEach(button => {
            button.addEventListener('click', function () {
                const themeUrl = this.getAttribute('data-theme'); // Obtenir l'URL du thème
                localStorage.setItem('selectedTheme', themeUrl); // Sauvegarder dans localStorage
                alert('Thème enregistré ! Revenez à la page principale pour voir le changement.');
            });
        });
    </script>
</body>
</html>

{% endblock %}
