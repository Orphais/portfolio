<script src="https://cdn.jsdelivr.net/npm/masonry-layout@4.2.2/dist/masonry.pkgd.min.js" integrity="sha384-GNFwBvfVxBkLMJpYMOABq3c+d3KnQxudP/mGPkzpZSTYykLBNsZEnG2D9G/X/+7D" crossorigin="anonymous" async></script>

<div class="row row-cols-1 row-cols-md-3 g-4 mx-4" data-masonry='{"	": true }'>
	{% for creation in creations %}
		<div class="col">
			<div class="card h-100">
				<img src="{{ creation.image }}" class="card-img-top" alt="...">
				<div class="card-body">
					<h5 class="card-title">{{ creation.name }}</h5>
					<p class="card-text">{{ creation.description }}</p>
				</div>
				<div class="card-footer">
					<small class="text-body-secondary">{{ creation.createdAt|date('d/m/Y') }}</small>
				</div>
			</div>
		</div>
	{% endfor %}
</div>
